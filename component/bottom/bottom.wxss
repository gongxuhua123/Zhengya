.conent{
  width: 100%;
  height: 75px;
  position:fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding-bottom:constant(safe-area-inset-bottom); /*  兼容iOS < 11.2 */
  padding-bottom:env(safe-area-inset-bottom); /*  兼容iOS > 11.2 */
  box-sizing: content-box;
}
.loopdiv{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.loopdiv image:first-child{
  width: 60rpx;
  height: 60rpx;
}
.loopdiv text{
  font-size: 35rpx;
  color: #a1a1a1;
  z-index: 10;
}
 .loopdiv image:nth-child(3){
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: -110rpx;
  border: 5px solid #fff;
  border-width:  5px 5px 0 5px;
  background-color: #fff;
  border-radius: 50%;
  z-index: 5;
}