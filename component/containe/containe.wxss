.container_for {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 25rpx;
  background-color: #fff;
}

.containe_views {
  width: 24.2%;
  flex: none;
  padding: 15rpx 0;
  border-bottom: 3rpx solid #eee;
  border-right: 3rpx solid #eee;
}

.containe_views:nth-child(4n) {
  border-right: 0;
}

.containe_views image {
  width: 120rpx;
  height: 120rpx;
}

.containe_views text {
  margin-top: 20rpx;
}

.container_eject {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 20;
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}

.functionalarea {
  width: 90%;
  margin: 28vh auto 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-items: center;
  border-radius: 30rpx;
  overflow: hidden;
}

.funalar_head {
  width: 100%;
  background-color: rgb(39, 42, 59);
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  color: #88c000;
}

.funalar_container {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  background-color: #fff;
  padding-bottom: 40rpx;
}

.funalar_view {
  width: 25%;
  flex: none;
  margin: 30rpx 0 0 0;
}

.imagback  {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #88c000;
  border-radius: 50rpx;
  overflow: hidden;
  z-index: 1;
}
.imagback image{
  width: 100rpx;
  height: 100rpx;
  z-index: 2;
}

@-webkit-keyframes fadeInRight {
  0% {
     opacity: 0;
     -webkit-transform: translateX(20px);
  }
  100% {
     opacity: 1;
     -webkit-transform: translateX(0);
  }
}
@keyframes fadeInRight {
  0% {
     opacity: 0;
     transform: translateX(20px);
  }
  100% {
     opacity: 1;
     transform: translateX(0);
  }
}

.fadeInRight {
  -webkit-animation-name: fadeInRight;
  animation-name: fadeInRight;
}